{
  "name": "@alfred/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Alfred REST API - Connect Claude to Alfred's workflow automation",
  "type": "module",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "bin": {
    "alfred-mcp": "dist/index.js"
  },
  "scripts": {
    "dev": "smithery dev",
    "build": "npm run build:http",
    "build:http": "smithery build",
